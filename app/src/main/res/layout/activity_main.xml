<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/R1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="#00FF00"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="My TV"
            android:textColor="#0000FF"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/ln1"
        android:background="#00FF00"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV Power"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speaker Volume"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Channel"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/ln2"
        android:background="#00FF00"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textAlignment="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="My Remote Control"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ln4"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Power"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="left"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/sw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ln5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Volume"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/sb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:progress="0"
            android:max="50"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln6"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Channel"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:stretchColumns="3">

            <TableRow>

                <Button
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_weight="1"
                    android:text="3" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn4"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_weight="1"
                    android:text="6" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn7"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_weight="1"
                    android:text="9" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn0"
                    android:layout_weight="1"
                    android:text="0" />

                <Button
                    android:id="@+id/btnAddChnl"
                    android:layout_weight="1"
                    android:text="CH+" />

                <Button
                    android:id="@+id/btnSubtChnl"
                    android:layout_weight="1"
                    android:text="CH-" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Fravorite Channel"
            android:textSize="20dp" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:stretchColumns="3">

            <TableRow>

                <Button
                    android:layout_weight="1"
                    android:text="ABC" />

                <Button
                    android:layout_weight="1"
                    android:text="NOC" />

                <Button
                    android:layout_weight="1"
                    android:text="BIC" />
            </TableRow>


        </TableLayout>

    </LinearLayout>

<LinearLayout
        android:id="@+id/ln9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln8"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:stretchColumns="3">

            <TableRow>

                <Button
                    android:layout_weight="1"
                    android:text="SWITCH TO DVR" />

                <Button
                    android:layout_weight="1"
                    android:text="CONFIGURE" />
            </TableRow>


        </TableLayout>

    </LinearLayout>
</RelativeLayout>